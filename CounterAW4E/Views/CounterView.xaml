<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CounterAW4E.Views.CounterView">
    <VerticalStackLayout>
        <Label Text="{Binding Name}" FontSize="18" HorizontalOptions="Center" />
        <Label Text="{Binding Value}" FontSize="36" HorizontalOptions="Center" />
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button Text="-" Command="{Binding DecrementCommand}" WidthRequest="50"/>
            <Button Text="+" Command="{Binding IncrementCommand}" WidthRequest="50"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:CounterAW4E.Views"
             x:Class="CounterAW4E.Views.CountersPage"
             Title="Counters">
    <VerticalStackLayout>
        <Label Text="Dynamic Counters" />
        <Entry Placeholder="Enter counter name" Text="{Binding NewCounterName}" />
        <Button Text="Add Counter" Command="{Binding AddCounterCommand}" />
        <ScrollView>
            <CollectionView ItemsSource="{Binding Counters}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <views:CounterView />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>